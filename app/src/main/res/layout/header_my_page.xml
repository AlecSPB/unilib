<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <ImageView
            android:id="@+id/profile_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/profile2"
            android:layout_marginLeft="39dp" />
        <TextView
            android:id="@+id/profile_id"
            android:layout_toRightOf="@+id/profile_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="daniel_kia43"
            android:textColor="@color/gray_43"
            android:textSize="17dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/profile_addr"
            android:layout_toRightOf="@+id/profile_img"
            android:layout_below="@+id/profile_id"
            android:text="서울시 구로구 오류동"
            android:textSize="14dp"
            android:textColor="@color/gray_99"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="70dp"
            android:layout_height="23dp"
            android:text="수정"
            android:textColor="@color/gray_99"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="23dp"
            android:background="@drawable/rounded_button_shape"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/gray_e3">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="@string/my_page_my_book"
            android:textColor="@color/borrow_button_text_color"
            android:textSize="15dp"
            android:gravity="center"/>
        <View
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/gray_99"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="@string/my_page_book_history"
            android:textColor="@color/gray_99"
            android:textSize="15dp"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>