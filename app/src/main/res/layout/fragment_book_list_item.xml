<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="44dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">
    <LinearLayout
        android:paddingBottom="10dp"
        android:layout_marginBottom="44dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/rounded_shape"
        android:layout_marginTop="21dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="11dp"
            android:paddingTop="11dp"
            android:paddingBottom="11dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hotny119"
                android:textColor="@color/gray_43"
                android:layout_centerVertical="true"
                android:textSize="17dp"/>
            <TextView
                android:layout_toLeftOf="@+id/bookmark_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="8dp"
                android:text="서울시 광진구 능동"
                android:textColor="@color/gray_99"
                android:layout_centerVertical="true"
                android:textSize="13dp"/>
            <ImageView
                android:id="@+id/bookmark_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bookmark"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <com.seoulapp.unilib.views.BookListListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ 총 5권 보유/ 목록 더보기 >>"
            android:textColor="@color/gray_99"
            android:textSize="15dp"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="6dp"
            android:layout_marginRight="12dp"/>

    </LinearLayout>
    <ImageView
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:src="@drawable/profile"
        android:layout_marginLeft="21dp"/>

</FrameLayout>