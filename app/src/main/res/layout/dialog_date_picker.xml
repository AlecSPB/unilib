<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/x"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/book_type_img"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/icon3"/>
            <TextView
                android:layout_below="@+id/book_type_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가족/감동"
                android:textColor="@color/gray_99"
                android:textSize="15dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="나의 라임 오렌지나무"
                android:textColor="@color/black"
                android:textSize="19dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/book_writer"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="J.M. 바스콘셀로스"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/book_intro"
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-따뜻한 감동을 느낄 수 있는 명작중의 명작!"
                android:textColor="@color/gray_99"
                android:textStyle="italic"
                android:textSize="14dp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_99"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>